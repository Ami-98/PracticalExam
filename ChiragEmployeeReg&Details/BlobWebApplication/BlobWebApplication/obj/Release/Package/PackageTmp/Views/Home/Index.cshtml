@model BlobWebApplication.Models.ChiragInfo
@{
    ViewBag.Title = "Index";
}
<h2>Index</h2>
@using (Html.BeginForm("Index", "Home", new { id = Model.RowKey }, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <fieldset>
        <legend>Student Form</legend>
        <ol>
            <li>
                <label>First Name</label>
                <input type="text" name="FName" required="required" value="@Model.FirstName" />
            </li>
            <li>
                <label>Last Name</label>
                <input type="text" name="LName" required="required" value="@Model.LastName" />
            </li>
            <li>
                <label>Email</label>
                <input type="email" name="Email" value="@Model.Email" />
            </li>
            <li>
                <label>Number</label>
                <input type="text" name="Number" value="@Model.Number" />
            </li>
        </ol>
    </fieldset>
    <fieldset>
        <legend>Upload File</legend>
        <ol>
            <li>
                <label style="margin-right:15px;">Select file </label>
                <input type="file" name="FilePath" value="" />
            </li>
        </ol>
        <input type="submit" value="Submit" />
    </fieldset>
}
